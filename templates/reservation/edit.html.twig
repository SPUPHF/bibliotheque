{% extends 'base.html.twig' %}

{% block title %}Modifier la réservation{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Modifier la réservation #{{ reservation.id }}</h1>

        {{ form_start(form) }}
        {{ form_widget(form) }}

        <div class="mt-3">
            <button class="btn btn-primary">Mettre à jour</button>
            <a href="{{ path('app_reservation_index') }}" class="btn btn-secondary">Annuler</a>
        </div>
        {{ form_end(form) }}

        <hr class="my-4">

        <h3>Supprimer cette réservation</h3>
        <form method="post" action="{{ path('app_reservation_delete', {'id': reservation.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette réservation ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
            <button class="btn btn-danger">Supprimer</button>
        </form>
    </div>
{% endblock %}